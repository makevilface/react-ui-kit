{
  "parser": "typescript",
  "semi": true,
  "trailingComma": "all",
  "singleQuote": true,
  "printWidth": 120,
  "tabWidth": 2,
  "bracketSpacing": true,
  "useTabs": false,
  "arrowParens": "always",
  "overrides": [
		{
			"files": ["*.json", "*.html"],
			"options": {
				"useTabs": false,
				"tabWidth": 2
			}
		}
	]
}
